<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digitalhousefoods_desafio2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigitalHouseFoods_Desafio2">
        <activity android:name="com.example.digitalhousefoods_desafio2.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.FoodDetailActivity"
            android:parentActivityName=".view.activity.FoodActivity" />
        <activity
            android:name=".view.activity.FoodActivity"
            android:parentActivityName=".view.activity.RestaurantsActivity" />
        <activity android:name=".view.activity.RestaurantsActivity"
            android:parentActivityName=".view.activity.MainActivity"/>
        <activity
            android:name="com.example.digitalhousefoods_desafio2.view.activity.RegisterActivity"
            android:parentActivityName="com.example.digitalhousefoods_desafio2.view.activity.MainActivity" />
        <activity android:name="com.example.digitalhousefoods_desafio2.view.activity.MainActivity">

        </activity>
    </application>

</manifest>